{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}